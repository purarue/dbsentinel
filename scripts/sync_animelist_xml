#!/usr/bin/env bash

ROOT_DIR="$(realpath "$(dirname "${BASH_SOURCE[0]}")"/..)"
cd "${ROOT_DIR}/" || exit $?

# upload to _animelist.xml and then move to prevent broken files while uploading
SOURCE="$HPIDATA/malexport/purplepinapples/animelist.xml"
if [[ -f "$SOURCE" ]]; then
	cp -v "$SOURCE" "$ROOT_DIR/data/animelist.xml"
	echo "Uploading $SOURCE"
	retry -- rsync -avz -e ssh "$SOURCE" vultr:~/code/dbsentinel/data/_animelist.xml &&
		retry -- ssh vultr 'mv -v ~/code/dbsentinel/data/_animelist.xml ~/code/dbsentinel/data/animelist.xml'
else
	echo "File not found: $SOURCE"
fi
